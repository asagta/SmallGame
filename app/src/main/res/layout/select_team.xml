<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    android:background="@drawable/main_page"
 >

    <TextView
            android:id="@+id/textV10"
            android:layout_width="585dp"
            android:layout_height="82dp"
            android:text="Home CriC"
            android:textColor="#D1202D"
            android:gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textSize="50dp"
            />

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/innerLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="223dp"
                android:layout_height="70dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="223dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/button"
                android:layout_width="51dp"
                android:layout_height="20dp"
                android:text="GO" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESUME" />
            <Button
                android:id="@+id/but4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SQUADS" />
            <Button
                android:id="@+id/but5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPL" />
            <Button
                android:id="@+id/but6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume IPL" />
            <ImageButton
                android:id="@+id/button7"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:background="@drawable/tournament"
                app:srcCompat="@drawable/rounded_square"
                android:layout_marginTop="70dp"
                 />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATS" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume Tour" />

            <Button
                android:id="@+id/button24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RRobin" />

            <Button
                android:id="@+id/button25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resumeRR" />
            <ImageButton
                android:id="@+id/b7"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:background="@drawable/qplay"
                android:layout_marginTop="70dp"
                />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
