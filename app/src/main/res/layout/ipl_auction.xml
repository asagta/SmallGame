<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="223dp"
        android:layout_height="65dp"
        android:text="Player Name"
        android:layout_marginLeft="197dp"
        android:background="@drawable/display4"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="254dp" />

    <Button
        android:id="@+id/button33"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:text="BID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:text="Current Price"
        android:textSize="18dp"
        android:layout_marginLeft="210dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="175dp"
        android:layout_height="44dp"
        android:layout_marginLeft="209dp"
        android:layout_marginTop="18dp"
        android:text="bidder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="57dp"
        android:layout_height="54dp"
        android:text="180"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/greenish"
        android:background="@drawable/round_view"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/pool"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="POOL"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button35"
        android:layout_width="89dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="178dp"
        android:text="START"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView25" />

    <Button
        android:id="@+id/button36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="HOME"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/csk"
        app:layout_constraintRight_toLeftOf="@+id/textView15"
        android:layout_marginRight="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="165dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="86dp"
        android:layout_height="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:text="PURSE"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button36"
        tools:layout_editor_absoluteX="490dp" />

    <TextView
        android:id="@+id/purse"
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:text="6000000"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />
</android.support.constraint.ConstraintLayout>